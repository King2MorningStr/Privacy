
#:kivy 2.1.0

ScreenManager:
    id: sm
    HomeScreen:
        name: "home"
    TierComparisonScreen:
        name: "tier_comparison"
    VectorStoreScreen:
        name: "vector_store"
    TradeManagerScreen:
        name: "trade_manager"
    TradeOnboardingScreen:
        name: "trade_onboarding"
    UpgradeLimitPromptScreen:
        name: "upgrade_prompt"

<HomeScreen>:
    BoxLayout:
        orientation: "vertical"
        padding: dp(16)
        spacing: dp(12)

        Label:
            text: "âš¡ Dimensional Cortex (Mobile)"
            font_size: "22sp"
            size_hint_y: None
            height: self.texture_size[1] + dp(8)

        Label:
            text: root.status_text
            font_size: "14sp"
            halign: "left"
            valign: "top"
            text_size: self.width, None
            size_hint_y: None
            height: self.texture_size[1] + dp(8)

        Widget:
            size_hint_y: 1

        BoxLayout:
            size_hint_y: None
            height: dp(48)
            spacing: dp(8)

            Button:
                text: "Tiers"
                on_release: root.go_tier()

            Button:
                text: "Vectors"
                on_release: root.go_vectors()

            Button:
                text: "Trade"
                on_release: root.go_trade()
